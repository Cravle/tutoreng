{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Web",
  "extends": "./base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "noEmit": true,
    "target": "esnext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
    "exclude": [
      "node_modules",
      ".turbo"
    ]
}